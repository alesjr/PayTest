<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color"
    tools:context=".PayTestActivity">

    <fragment
        android:id="@+id/keyPadFragment"
        android:name="com.example.paytestapplication.PaymentType.Controller.KeyPadFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout="@layout/keypad_fragment" />

    <fragment
        android:id="@+id/typePaymentSlidePagerFragment"
        android:name="com.example.paytestapplication.PaymentType.Controller.PaymentTypeSlidePagerFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/keyPadFragment"
        tools:layout="@layout/payment_type_slide_pager" />


</androidx.constraintlayout.widget.ConstraintLayout>
